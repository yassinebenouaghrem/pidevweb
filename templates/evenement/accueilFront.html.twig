{% extends 'baseFront.html.twig' %}
{% block imageAccueil %}
    <section class="hero-wrap js-fullheight" style="background-image: url('{{ asset('Front/images/bg_3.jpg') }}');" data-section="home" data-stellar-background-ratio="0.5">

        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start" data-scrollax-parent="true">
                <div class="col-md-6 pt-5 ftco-animate">
                    <div class="mt-5">
                        <h1 class="mb-4">Bienvenue sur<br>ZenLife</h1>
                        <p class="mb-4">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in Bookmarksgrove.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

{%  endblock %}

{% block meteo %}
    <link rel="stylesheet" href="{{ asset('Front/style2.css') }}">
    <link rel="stylesheet" href="{{ asset('Front/css/meteo.css') }}">

{% endblock %}

{% block body %}



    <section class="ftco-section bg-light" id="blog-section">
        <div class="container">








            <div class="row justify-content-center mb-5 pb-5">
                <div class="col-md-10 heading-section text-center ftco-animate">
                    <h2 class="mb-4">Découvrez les nouveaux évènements ZenLife</h2>
                    <p>Choisissez l'évènement qui vous convient parmi une multitude d'évènements </p>
                </div>
            </div>



            <div class="row d-flex">



                {% for evenement in evenements %}





                    <div class="col-md-4 ftco-animate">
                        <div class="blog-entry">
                            <h2 style="text-align: center;color: #006dcc"> L'événement le plus réserver</h2>
                            <a href="{{ path('lireplusevenement_index', {'id': evenement.id}) }}" class="block-20" >

                                <img src="{{ asset('imgEvent/')~ evenement.image }}"  >
                            </a>
                            <div class="text d-block">
                                <div class="meta mb-3">
                                    <div><a href="{{ path('lireplusevenement_index', {'id': evenement.id}) }}" style="font-size:15px">Date : {{ evenement.dateEvent ? evenement.dateEvent|date('d-m-Y') : '' }}</a></div>

                                </div>

                                <h3 class="heading"><a href="{{ path('lireplusevenement_index', {'id': evenement.id}) }}" style="font-size:25px;text-transform: uppercase;">{{ evenement.titre }}</a></h3>
                                <p>{{ evenement.description }}</p>
                                <div class="meta mb-3">
                                    <div><a href="{{ path('lireplusevenement_index', {'id': evenement.id}) }}" style="font-size:20px">{{ evenement.tarif }} dt</a></div>

                                </div>
                                <p><a href="{{ path('lireplusevenement_index', {'id': evenement.id}) }}" class="btn btn-primary py-2 px-3">Réserver</a></p>

                            </div>
                        </div>
                    </div>
                {% endfor %}


                {% for evenement in dernier %}





                    <div class="col-md-4 ftco-animate">
                        <div class="blog-entry">
                            <h2 style="text-align: center;color: #006dcc"> Le dernier événement publié</h2>
                            <a href="{{ path('lireplusevenement_index', {'id': evenement.id}) }}" class="block-20" >

                                <img src="{{ asset('imgEvent/')~ evenement.image }}"  >
                            </a>
                            <div class="text d-block">
                                <div class="meta mb-3">
                                    <div><a href="{{ path('lireplusevenement_index', {'id': evenement.id}) }}" style="font-size:15px">Date : {{ evenement.dateEvent ? evenement.dateEvent|date('d-m-Y') : '' }}</a></div>

                                </div>

                                <h3 class="heading"><a href="{{ path('lireplusevenement_index', {'id': evenement.id}) }}" style="font-size:25px;text-transform: uppercase;">{{ evenement.titre }}</a></h3>
                                <p>{{ evenement.description }}</p>
                                <div class="meta mb-3">
                                    <div><a href="{{ path('lireplusevenement_index', {'id': evenement.id}) }}" style="font-size:20px">{{ evenement.tarif }} dt</a></div>

                                </div>
                                <p><a href="{{ path('lireplusevenement_index', {'id': evenement.id}) }}" class="btn btn-primary py-2 px-3">Réserver</a></p>

                            </div>
                        </div>
                    </div>
                {% endfor %}


            </div>
        </div>
        </div>
    </section>



{% endblock %}
