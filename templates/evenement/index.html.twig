{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdOrganisateur</th>
                <th>Type</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Lieu</th>
                <th>DateEvent</th>
                <th>Image</th>
                <th>Tarif</th>
                <th>Capacite</th>
                <th>NbReservation</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.idOrganisateur }}</td>
                <td>{{ evenement.type }}</td>
                <td>{{ evenement.titre }}</td>
                <td>{{ evenement.description }}</td>
                <td>{{ evenement.lieu }}</td>
                <td>{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.image }}</td>
                <td>{{ evenement.tarif }}</td>
                <td>{{ evenement.capacite }}</td>
                <td>{{ evenement.nbReservation }}</td>
                <td>{{ evenement.etat }}</td>
                <td>
                    <a href="{{ path('evenement_show', {'id': evenement.id}) }}">show</a>
                    <a href="{{ path('evenement_edit', {'id': evenement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('evenement_new') }}">Create new</a>
{% endblock %}
