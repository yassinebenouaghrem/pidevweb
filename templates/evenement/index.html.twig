{% extends 'baseBack.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block container %}
    <h1>Evenement index</h1>

    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>IdOrganisateur</th>
                            <th>Type</th>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Lieu</th>
                            <th>DateEvent</th>
                            <th>Image</th>
                            <th>Tarif</th>
                            <th>Capacite</th>
                            <th>NbReservation</th>
                            <th>Etat</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>IdOrganisateur</th>
                            <th>Type</th>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Lieu</th>
                            <th>DateEvent</th>
                            <th>Image</th>
                            <th>Tarif</th>
                            <th>Capacite</th>
                            <th>NbReservation</th>
                            <th>Etat</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for evenement in evenements %}
                        <tr>
                            <td>{{ evenement.getId() }}</td>
                            <td>{{ evenement.getIdOrganisateur() }}</td>
                            <td>{{ evenement.getType() }}</td>
                            <td>{{ evenement.getTitre() }}</td>
                            <td>{{ evenement.getDescription() }}</td>
                            <td>{{ evenement.getLieu() }}</td>
                            <td>{{ evenement.getDateEvent() ? evenement.getDateEvent()|date('Y-m-d') : '' }}</td>
                            <td>{{ evenement.getImage() }}</td>
                            <td>{{ evenement.getTarif() }}</td>
                            <td>{{ evenement.getCapacite() }}</td>
                            <td>{{ evenement.getNbReservation() }}</td>
                            <td>{{ evenement.getEtat() }}</td>
                            <td>

                                <a href="{{ path('evenement_edit', {'id': evenement.getId()}) }}" class="btn btn-warning">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                    </svg>
                                </a>
                                <a href="{{ path('evenement_delete', {'id': evenement.getId()}) }}" class="btn btn-danger">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="13">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="{{ path('evenement_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
