{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}
    <h1>Consultation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idtherapeute</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Emplacement</th>
                <th>Prix</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.id }}</td>
                <td>{{ consultation.idtherapeute }}</td>
                <td>{{ consultation.titre }}</td>
                <td>{{ consultation.description }}</td>
                <td>{{ consultation.emplacement }}</td>
                <td>{{ consultation.prix }}</td>
                <td>{{ consultation.image }}</td>
                <td>
                    <a href="{{ path('consultation_show', {'id': consultation.id}) }}">show</a>
                    <a href="{{ path('consultation_edit', {'id': consultation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('consultation_new') }}">Create new</a>
{% endblock %}
