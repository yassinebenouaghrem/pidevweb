{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cin</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Password</th>
                <th>Type</th>
                <th>Numtel</th>
                <th>Adresse</th>
                <th>Image</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.getId() }}</td>
                <td>{{ user.getCin() }}</td>
                <td>{{ user.getEmail() }}</td>
                <td>{{ user.getNom() }}</td>
                <td>{{ user.getPrenom() }}</td>
                <td>{{ user.getPassword() }}</td>
                <td>{{ user.getType() }}</td>
                <td>{{ user.getNumtel() }}</td>
                <td>{{ user.getAdresse() }}</td>
                <td>{{ user.getImage() }}</td>
                <td>{{ user.getEtat() }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.getId()}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.getId()}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
