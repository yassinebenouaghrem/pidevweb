{% extends 'baseBack.html.twig' %}

{% block title %}Therapeute index{% endblock %}

{% block container %}
    <h1>Gestion des utilisateurs</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Cin</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Type</th>
                <th>Numtel</th>
                <th>Adresse</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for therapeute in therapeutes %}
            <tr>
                <td>{{ therapeute.getId }}</td>
                <td>{{ therapeute.getCin }}</td>
                <td>{{ therapeute.getEmail }}</td>
                <td>{{ therapeute.getNom }}</td>
                <td>{{ therapeute.getPrenom }}</td>
                <td>{{ therapeute.getType }}</td>
                <td>{{ therapeute.getNumtel }}</td>
                <td><a href="{{ path("mapF",{'id':therapeute.id} )}}"> {{ therapeute.getAdresse }}</a></td>
                <td> <img width="50" height="50" src="{{ asset('images/')~ therapeute.image }}"  ></td>
                <td>
                    <a  class="btn btn-success btn-circle btn-lg" href="{{ path('therapeute_edit', {'id': therapeute.getId()}) }}"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-danger btn-circle btn-lg"   href="{{ path('therapeute_delete', {'id': therapeute.getId()}) }}"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<a class="btn btn-primary btn-icon-split" href="{{ path('therapeute_new') }}">
        <span class="icon text-white-50">
                                            <i class="fas fa-arrow-right"></i>
                                        </span>
        <span class="text">Ajouter un therapeute</span>
    </a>{% endblock %}
