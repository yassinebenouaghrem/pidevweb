
{% block container %}

<h1 align = "center" >Listes des Produits</h1><hr>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>IdProduit</th>
            <th>Nom</th>
            <th>Quantitee</th>
            <th>Type</th>
            <th>Prix</th>

        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td style="text-align: center ">{{ produit.idProduit }}</td>
                <td style="text-align: center ">{{ produit.nom }}</td>
                <td style="text-align: center ">{{ produit.quantitee }}</td>
                <td style="text-align: center ">{{ produit.type }}</td>
                <td style="text-align: center ">{{ produit.prix }}</td>

            </tr>

        {% endfor %}
        </tbody>
    </table>


{% endblock %}
