{% extends 'baseBack.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block container %}
    <h1>Produits index</h1>

    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>IdProduit</th>
            <th>Nom</th>
            <th>Quantitee</th>
            <th>Type</th>
            <th>Image</th>
            <th>Prix</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.idProduit }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.quantitee }}</td>
                <td>{{ produit.type }}</td>
                <td>{{ produit.image }}</td>
                <td>{{ produit.prix }}</td>
                <td>
                    <a href="{{ path('produits_show', {'idProduit': produit.idProduit}) }}">show</a>
                    <a href="{{ path('produits_edit', {'idProduit': produit.idProduit}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




    <a href="{{ path('produits_new') }}">Create new</a>
    <a href="{{ path('produits_list') }}">Imprimer</a>
    {{ knp_pagination_render(produits) }}
{% endblock %}
