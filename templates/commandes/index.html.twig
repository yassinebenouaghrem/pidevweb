{% extends 'base.html.twig' %}

{% block title %}Commandes index{% endblock %}

{% block body %}
    <h1>Commandes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCommande</th>
                <th>IdPanier</th>
                <th>IdProduit</th>
                <th>Quantitee</th>
                <th>PrixU</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.idCommande }}</td>
                <td>{{ commande.idPanier }}</td>
                <td>{{ commande.idProduit }}</td>
                <td>{{ commande.quantitee }}</td>
                <td>{{ commande.prixU }}</td>
                <td>
                    <a href="{{ path('commandes_show', {'idCommande': commande.idCommande}) }}">show</a>
                    <a href="{{ path('commandes_edit', {'idCommande': commande.idCommande}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commandes_new') }}">Create new</a>
{% endblock %}
