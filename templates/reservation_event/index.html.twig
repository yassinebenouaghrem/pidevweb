{% extends 'base.html.twig' %}

{% block title %}ReservationEvent index{% endblock %}

{% block body %}
    <h1>ReservationEvent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdOrganisateur</th>
                <th>IdClient</th>
                <th>IdEvent</th>
                <th>NbPlace</th>
                <th>Total</th>
                <th>ModePaiement</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation_event in reservation_events %}
            <tr>
                <td>{{ reservation_event.getId() }}</td>
                <td>{{ reservation_event.getIdOrganisateur() }}</td>
                <td>{{ reservation_event.getIdClient() }}</td>
                <td>{{ reservation_event.getIdEvent() }}</td>
                <td>{{ reservation_event.getNbPlace() }}</td>
                <td>{{ reservation_event.getTotal() }}</td>
                <td>{{ reservation_event.getModePaiement() }}</td>
                <td>{{ reservation_event.getEtat() }}</td>
                <td>
                    <a href="{{ path('reservation_event_show', {'id': reservation_event.getId()}) }}">show</a>
                    <a href="{{ path('reservation_event_edit', {'id': reservation_event.getId()}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservation_event_new') }}">Create new</a>
{% endblock %}
