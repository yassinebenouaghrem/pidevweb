{% extends 'base.html.twig' %}

{% block title %}ReservationEvent index{% endblock %}

{% block body %}
    <h1>ReservationEvent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdOrganisateur</th>
                <th>IdClient</th>
                <th>IdEvent</th>
                <th>NbPlace</th>
                <th>Total</th>
                <th>ModePaiement</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation_event in reservation_events %}
            <tr>
                <td>{{ reservation_event.id }}</td>
                <td>{{ reservation_event.idOrganisateur }}</td>
                <td>{{ reservation_event.idClient }}</td>
                <td>{{ reservation_event.idEvent }}</td>
                <td>{{ reservation_event.nbPlace }}</td>
                <td>{{ reservation_event.total }}</td>
                <td>{{ reservation_event.modePaiement }}</td>
                <td>{{ reservation_event.etat }}</td>
                <td>
                    <a href="{{ path('reservation_event_show', {'id': reservation_event.id}) }}">show</a>
                    <a href="{{ path('reservation_event_edit', {'id': reservation_event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservation_event_new') }}">Create new</a>
{% endblock %}
