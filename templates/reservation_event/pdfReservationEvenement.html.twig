<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Facture réservation</title>

    <style type="text/css">
        * {
            font-family: Verdana, Arial, sans-serif;
        }
        table{
            font-size: x-small;
        }
        tfoot tr td{
            font-weight: bold;
            font-size: x-small;
        }
        .gray {
            background-color: lightgray
        }
    </style>

</head>
<body>
{% for reservation_event in reservation_events %}
    <div class="col-xs-12">
        <h2 class="page-header">

            <center>   <img style="position: center" src="http://localhost/Crudv1/public/images/logo.JPG" alt="" width="200"></center>
            <h3 style="color: #2653d4"><center>Facture de réservation </center> </h3>

            <small class="pull-right"></small>
        </h2>

        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                <br>
                <address>
                    <strong>Zenlife.tn </strong><br>
                    Tunis-Esprit<br>
                    Phone: (+216) (+216) 98 242 670<br>
                    Email:Contact@Zenlife.tn

                </address></div>

        </div>
    </div>

    <br><br><br>
    <table width="100%">
        <tr>
            {% for client in client %}

                <td style="font-size: large;color: #2653d4;position: left;text-transform: uppercase;" ><strong>Facture pour : </strong>{{ client.nom }} {{ client.prenom }}</td>
            {% endfor %}

        </tr>

    </table>

    <br/><br><br>

    <table width="100%">
        <thead style="background-color: lightgray;font-size:15px ;">
        <tr>
            <th class="text-left">Evénement</th>
            <th class="text-right">Date de l'événement</th>
            <th class="text-right">Nombre de place réserver</th>
            <th class="text-right">Mode de paiement</th>
            <th class="text-right">Prix unitaire</th>
        </tr>
        </thead>
        <tbody>
        <tr style="font-size: medium;">
            <th scope="row" style="text-transform: uppercase;">{{ reservation_event.titreEvent }}</th>
            <td align="right">{{ reservation_event.dateEvent ? reservation_event.dateEvent|date('d-m-Y') : ''}}</td>
            <td align="right">{{ reservation_event.nbPlace }}</td>
            <td align="right">{{ reservation_event.modePaiement }}</td>
            <td align="right">{{ reservation_event.total / reservation_event.nbPlace  }}</td>
        </tr>

        <tr style="font-size: medium;">
            <td colspan="3"></td>
            <td align="right" style="font-weight: bold;">Total (en dt)</td>
            <td align="right" class="gray">{{ reservation_event.total}}</td>
        </tr>

        </tfoot>
        <div style="position: relative;
                top: 200px; left: 400px;">
            <div class="thanks">Merci pour votre réservation</div><br><br>
            <div class="thanks" style="
                left: 50px;">    <img src="http://localhost/Crudv1/public/assets/qr-code/{{  reservation_event.qrcode }}"  width="200" >
            </div><br><br><br>
            <div class="notices">
                <div>NOTICE:</div>
                <div class="notice">QR code à présenter le jour de l'événement.</div>
            </div>
        </div>

    </table>





{% endfor %}
</body>
</html>