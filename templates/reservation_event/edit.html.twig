                            <dd class="col-sm-8" >{{ evenement.dateEvent ? evenement.dateEvent|date('d-m-Y') : '' }}</dd>
                            </dd>

                            <dd class="col-sm-9">
                            <dt class="col-sm-4">Tarif par personne : </dt>
                            <dd class="col-sm-8">{{ evenement.tarif }} dt
