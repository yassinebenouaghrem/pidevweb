{% extends 'base.html.twig' %}

{% block title %}Rating index{% endblock %}

{% block body %}
    <h1>Rating index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Rating</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rating in ratings %}
            <tr>
                <td>{{ rating.getId() }}</td>
                <td>{{ rating.getEmail() }}</td>
                <td>{{ rating.getRating() }}</td>
                <td>
                    <a href="{{ path('rating_show', {'id': rating.getId()}) }}">show</a>
                    <a href="{{ path('rating_edit', {'id': rating.getId()}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rating_new') }}">Create new</a>
{% endblock %}
